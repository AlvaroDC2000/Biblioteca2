<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="693.0" prefWidth="957.0" stylesheets="@../styles/styles.css"
            xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controllers.DetailsController">

    <children>
        <BorderPane fx:id="mainBorder" AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0"
                    AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0">
            <!-- Menú lateral -->
            <left>
                <VBox alignment="TOP_CENTER" prefWidth="212.0" spacing="20.0"
                      style="-fx-background-color: #1e3a5f;">
                    <VBox alignment="CENTER" spacing="10">
                        <padding><Insets top="10" bottom="10" left="10" right="10"/></padding>
                        <ImageView fx:id="drawerLogo" fitHeight="80" fitWidth="100" preserveRatio="true">
                            <VBox.margin><Insets top="20" bottom="80"/></VBox.margin>
                        </ImageView>
                    </VBox>
                    <Button onAction="#handleShowBuscar" prefWidth="195.0" text="Buscar"/>
                    <Button onAction="#handleShowRecomendaciones" prefWidth="195.0" text="Recomendaciones"/>
                    <Button onAction="#handleShowBiblioteca" prefWidth="195.0" text="Mi Biblioteca"/>
                    <Button onAction="#handleShowPerfil" prefWidth="195.0" text="Perfil"/>
                    <Button onAction="#handleLogout" prefWidth="195.0" text="Cerrar sesión"/>
                </VBox>
            </left>

            <center>
                <VBox alignment="TOP_LEFT" spacing="15.0">
                    <padding><Insets top="20" bottom="20" left="20" right="20"/></padding>

                    <Label styleClass="label-title" text="Detalles del libro" />

                    <ScrollPane fitToWidth="true" fitToHeight="false" vbarPolicy="AS_NEEDED">
                        <content>
                            <VBox fx:id="detailsContainer" spacing="15" alignment="TOP_LEFT"
                                  style="-fx-background-color: #1e3a5f;" prefWidth="700">
                                <padding><Insets top="20" bottom="20" left="20" right="20"/></padding>
                                <ImageView fx:id="bookImage" fitWidth="120" preserveRatio="true"/>
                                <Label fx:id="titleLabel" styleClass="detail-title" wrapText="true"/>
                                <Label fx:id="authorLabel" styleClass="detail-text"/>
                                <Label fx:id="editorialLabel" styleClass="detail-text"/>

                                <Label text="Descripción:" styleClass="detail-label"/>
                                <TextArea fx:id="descriptionArea" wrapText="true" editable="false"
                                          styleClass="detail-description"
                                          prefWidth="660" prefHeight="150"/>

                                <Label text="Comentario personal:" styleClass="detail-label"/>
                                <TextArea fx:id="comentarioArea" promptText="Escribe tu comentario personal..."
                                          wrapText="true"
                                          styleClass="detail-input"
                                          prefWidth="660" prefHeight="80"/>

                                <GridPane hgap="10" vgap="12">
                                    <columnConstraints>
                                        <ColumnConstraints halignment="LEFT" percentWidth="30"/>
                                        <ColumnConstraints halignment="LEFT" percentWidth="70"/>
                                    </columnConstraints>

                                    <RowConstraints percentHeight="10"/>
                                    <RowConstraints percentHeight="10"/>
                                    <RowConstraints percentHeight="10"/>
                                    <RowConstraints percentHeight="10"/>
                                    <RowConstraints percentHeight="10"/>

                                    <Label text="Estado:" styleClass="detail-label" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                                    <ComboBox fx:id="estadoCombo" promptText="Seleccionar estado"
                                              styleClass="detail-input" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                                    <Label text="Fecha lectura:" styleClass="detail-label" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                                    <DatePicker fx:id="fechaLecturaPicker" styleClass="detail-input" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                                    <Label text="Prestado a:" styleClass="detail-label" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                                    <TextField fx:id="prestadoAField" promptText="Nombre de persona"
                                               styleClass="detail-input" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                                    <Label text="Fecha préstamo:" styleClass="detail-label" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                                    <DatePicker fx:id="fechaPrestamoPicker" styleClass="detail-input" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

                                    <Label text="Devuelto:" styleClass="detail-label" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                                    <CheckBox fx:id="devueltoCheck" styleClass="detail-input" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
                                </GridPane>

                                <Button text="Guardar en Mi Biblioteca" onAction="#handleSaveToLibrary"
                                        styleClass="button button-primary"/>

                                <Label text="Opiniones de otros lectores" styleClass="detail-section"/>
                                <VBox fx:id="opinionesContainer" spacing="10" alignment="TOP_LEFT"/>

                                <Separator/>
                                <Label text="Tu opinión:" styleClass="detail-section"/>
                                <GridPane hgap="10" vgap="12">
                                    <columnConstraints>
                                        <ColumnConstraints halignment="LEFT" percentWidth="30"/>
                                        <ColumnConstraints halignment="LEFT" percentWidth="70"/>
                                    </columnConstraints>

                                    <Label text="Nota:" styleClass="detail-label" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                                    <Spinner fx:id="notaOpinionSpinner" styleClass="detail-input" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                                    <Label text="Comentario:" styleClass="detail-label" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                                    <TextArea fx:id="contenidoOpinionArea" promptText="Escribe tu opinión..."
                                              wrapText="true" styleClass="detail-input"
                                              prefWidth="660" prefHeight="80"
                                              GridPane.rowIndex="1" GridPane.columnIndex="1"/>
                                </GridPane>

                                <Button text="Publicar opinión" onAction="#handleAgregarOpinion"
                                        styleClass="button button-primary"/>
                            </VBox>
                        </content>
                    </ScrollPane>
                </VBox>
            </center>
        </BorderPane>
    </children>
</AnchorPane>
