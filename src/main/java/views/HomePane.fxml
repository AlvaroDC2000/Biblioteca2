<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controllers.HomePaneController" prefWidth="800" prefHeight="600"
            stylesheets="@../styles/styles.css">
    <children>
        <VBox alignment="TOP_CENTER" spacing="20" AnchorPane.topAnchor="20.0" AnchorPane.leftAnchor="20.0"
              AnchorPane.rightAnchor="20.0" AnchorPane.bottomAnchor="20.0">
            <Label text="Bienvenido a tu Biblioteca" styleClass="label-title" />
            
            <HBox spacing="10" alignment="CENTER">
                <TextField fx:id="searchField" promptText="Buscar libros por tÃ­tulo, autor, ISBN..." prefWidth="400"/>
                <Button text="Buscar" onAction="#handleSearch" styleClass="button button-primary"/>
            </HBox>
            
            <ScrollPane fitToWidth="true" fitToHeight="true" prefHeight="450">
                <content>
                    <VBox fx:id="resultsContainer" spacing="10">
                        <padding>
                            <Insets top="10" right="10" bottom="10" left="10"/>
                        </padding>
                    </VBox>
                </content>
            </ScrollPane>
        </VBox>
    </children>
</AnchorPane>
