<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="693.0" prefWidth="957.0" stylesheets="@../styles/styles.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.HomePaneController">

    <children>
        <BorderPane fx:id="mainBorder" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0">

            <left>
                <VBox alignment="TOP_CENTER" prefHeight="693.0" prefWidth="212.0" spacing="20.0" style="-fx-background-color: #1e3a5f;">
                    <VBox alignment="CENTER" spacing="10">
                        <padding>
                            <Insets bottom="10" left="10" right="10" top="10" />
                        </padding>
                        <ImageView fx:id="drawerLogo" fitHeight="80.0" fitWidth="100.0" preserveRatio="true">
                     <VBox.margin>
                        <Insets bottom="80.0" top="20.0" />
                     </VBox.margin></ImageView>
                    </VBox>
                    <Button maxWidth="195.0" onAction="#handleShowBuscar" prefHeight="39.0" prefWidth="195.0" text="Buscar" />
                    <Button maxWidth="195.0" onAction="#handleShowRecomendaciones" prefHeight="39.0" prefWidth="195.0" text="Recomendaciones" />
                    <Button maxWidth="195.0" onAction="#handleShowBiblioteca" prefHeight="39.0" prefWidth="195.0" text="Mi Biblioteca" />
                    <Button maxWidth="195.0" onAction="#handleShowPerfil" prefHeight="39.0" prefWidth="195.0" text="Perfil" />
                    <Button maxWidth="195.0" onAction="#handleLogout" prefHeight="39.0" prefWidth="195.0" text="Cerrar sesión" />
                </VBox>
            </left>

            <center>
                <VBox alignment="TOP_CENTER" spacing="20">
                    <padding>
                        <Insets bottom="20" left="20" right="20" top="20" />
                    </padding>

                    <Label styleClass="label-title" text="Bienvenido a tu Biblioteca" />

                    <HBox alignment="CENTER" spacing="10">
                        <TextField fx:id="searchField" prefWidth="400" promptText="Buscar libros por título, autor, ISBN..." />
                        <Button onAction="#handleSearch" styleClass="button button-primary" text="Buscar" />
                    </HBox>

                    <ScrollPane fitToHeight="true" fitToWidth="true" prefHeight="450">
                        <content>
                            <VBox fx:id="resultsContainer" prefHeight="524.0" prefWidth="703.0" spacing="10">
                                <padding>
                                    <Insets bottom="10" left="10" right="10" top="10" />
                                </padding>
                            </VBox>
                        </content>
                    </ScrollPane>
                </VBox>
            </center>
        </BorderPane>
    </children>
</AnchorPane>
