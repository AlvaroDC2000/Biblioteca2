<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="693.0" prefWidth="957.0" stylesheets="@../styles/styles.css"
            xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controllers.DetailsController">
    <children>
        <BorderPane fx:id="mainBorder" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0"
                    AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0">

            <left>
                <VBox alignment="TOP_CENTER" prefHeight="693.0" prefWidth="212.0" spacing="20.0"
                      style="-fx-background-color: #1e3a5f;">
                    <VBox alignment="CENTER" spacing="10">
                        <padding>
                            <Insets bottom="10" left="10" right="10" top="10"/>
                        </padding>
                        <ImageView fx:id="drawerLogo" fitHeight="80.0" fitWidth="100.0" preserveRatio="true">
                            <VBox.margin>
                                <Insets bottom="80.0" top="20.0"/>
                            </VBox.margin>
                        </ImageView>
                    </VBox>
                    <Button maxWidth="195.0" onAction="#handleShowBuscar" prefHeight="39.0" prefWidth="195.0" text="Buscar"/>
                    <Button maxWidth="195.0" onAction="#handleShowRecomendaciones" prefHeight="39.0" prefWidth="195.0" text="Recomendaciones"/>
                    <Button maxWidth="195.0" onAction="#handleShowBiblioteca" prefHeight="39.0" prefWidth="195.0" text="Mi Biblioteca"/>
                    <Button maxWidth="195.0" onAction="#handleShowPerfil" prefHeight="39.0" prefWidth="195.0" text="Perfil"/>
                    <Button maxWidth="195.0" onAction="#handleLogout" prefHeight="39.0" prefWidth="195.0" text="Cerrar sesiÃ³n"/>
                </VBox>
            </left>

            <center>
                <VBox alignment="TOP_CENTER" spacing="20">
                    <padding>
                        <Insets bottom="20" left="20" right="20" top="20"/>
                    </padding>

                    <Label styleClass="label-title" text="Detalles del libro"/>

                    <ScrollPane fitToHeight="true" fitToWidth="true" prefHeight="542.0" prefWidth="706.0">
                        <content>
                            <VBox fx:id="detailsContainer" spacing="20" alignment="TOP_CENTER"
                                  style="-fx-background-color: #1e3a5f;" prefWidth="700">
                                <padding>
                                    <Insets top="20" bottom="20" left="20" right="20"/>
                                </padding>

                                <ImageView fx:id="bookImage" fitWidth="150" preserveRatio="true"/>
                                <Label fx:id="titleLabel" styleClass="label-title"/>
                                <Label fx:id="authorLabel" style="-fx-text-fill: white;"/>
                                <Label fx:id="descriptionLabel" wrapText="true" style="-fx-text-fill: white;" maxWidth="600"/>

                                <Button text="Guardar en Mi Biblioteca" onAction="#handleSaveToLibrary"
                                        styleClass="button button-primary"/>
                            </VBox>
                        </content>
                    </ScrollPane>
                </VBox>
            </center>
        </BorderPane>
    </children>
</AnchorPane>
